
# Включаем mod_rewrite
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  
  # Если запрос не к существующему файлу
  RewriteCond %{REQUEST_FILENAME} !-f
  # Если запрос не к существующей директории
  RewriteCond %{REQUEST_FILENAME} !-d
  # И не к существующей ссылке
  RewriteCond %{REQUEST_FILENAME} !-l
  
  # Перенаправляем все запросы на index.html
  RewriteRule ^(.*)$ index.html [QSA,L]
</IfModule>

# Установка правильных MIME-типов
<IfModule mod_mime.c>
  # JavaScript
  AddType application/javascript .js
  AddType application/javascript .mjs
  AddType application/javascript .jsx
  AddType text/javascript .js
  AddType text/javascript .mjs
  AddType text/javascript .jsx
  
  # JSON
  AddType application/json .json
  
  # CSS
  AddType text/css .css
  
  # Fonts
  AddType font/ttf .ttf
  AddType font/otf .otf
  AddType font/woff .woff
  AddType font/woff2 .woff2
  AddType application/vnd.ms-fontobject .eot
  
  # SVG
  AddType image/svg+xml .svg
</IfModule>

# Установка кроссдоменных заголовков
<IfModule mod_headers.c>
  <FilesMatch "\.(js|jsx|css|json|ttf|otf|woff|woff2|eot|svg)$">
    Header set Access-Control-Allow-Origin "*"
    Header set Cache-Control "max-age=31536000, public"
  </FilesMatch>
</IfModule>

# Сжатие текстовых файлов
<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Кэширование для статических ресурсов
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType text/css "access plus 1 month"
  ExpiresByType application/javascript "access plus 1 month"
  ExpiresByType text/javascript "access plus 1 month"
</IfModule>

